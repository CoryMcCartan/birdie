citHeader("To cite `birdie` in publications please use the first two citations",
          "listed below, the first for the methodology (McCartan et al. 2023)",
          "and the second for the software (McCartan 2023).",
          "You may also want to cite the general BISG methodology",
          "(Fiscella and Fremont, 2006; Elliott et al., 2008),",
          "and/or the improved fully Bayesian BISG methodology (Imai et al., 2022).")

bibentry(
  bibtype = "Article",
  title = "Estimating Racial Disparities When Race is Not Observed",
  author = "Cory McCartan, Jacob Goldin, Daniel E. Ho, Kosuke Imai",
  journal = "arXiv preprint arXiv:2303.XXXXX",
  year = "2023",
  key = "mccartan2023race"
)

bibentry(
  bibtype = "misc",
  title = "birdie: Bayesian Instrumental Regression for Disparity Estimation",
  author = "Cory McCartan",
  url = "https://github.com/CoryMcCartan/birdie",
  year = "2023",
  key = "birdie"
)

